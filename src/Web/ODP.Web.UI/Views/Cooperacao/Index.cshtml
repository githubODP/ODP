@using ODP.Web.UI.Extensions
@model PagedResult<ODP.Web.UI.Models.Cooperacao.TermoCooperacaoViewModel>

<div class="container-fluid pt-lg-5">
    <div class="table-responsive shadow" style="margin-left:-12em; width:130%;">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Termos de <b>Cooperação</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a asp-controller="Cooperacao" asp-action="Create"
                           class="btn btn-success">
                            <img src="~/svg/adicionar.svg" width="20" height="20"
                                 class="d-inline-block align-top" alt="Adicionar">
                            <span class="m-1">Novo</span>
                        </a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Results.FirstOrDefault().Protocolo)</th>
                        <th>@Html.DisplayNameFor(model => model.Results.FirstOrDefault().Orgao)</th>
                        <th>@Html.DisplayNameFor(model => model.Results.FirstOrDefault().NroTermo)</th>
                        <th>@Html.DisplayNameFor(model => model.Results.FirstOrDefault().InicioVigencia)</th>
                        <th>@Html.DisplayNameFor(model => model.Results.FirstOrDefault().FimVIgencia)</th>
                        <th>@Html.DisplayNameFor(model => model.Results.FirstOrDefault().Validade)</th>
                        <th>@Html.DisplayNameFor(model => model.Results.FirstOrDefault().Ativo)</th>
                        <th>@Html.DisplayNameFor(model => model.Results.FirstOrDefault().Status)</th>
                        <th>@Html.DisplayNameFor(model => model.Results.FirstOrDefault().Informacoes)</th>
                        <th>@Html.DisplayNameFor(model => model.Results.FirstOrDefault().Observacao)</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Results)
                    {
                        <tr>
                            <td >@Html.DisplayFor(modelItem => item.Protocolo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Orgao)</td>
                            <td>@Html.DisplayFor(modelItem => item.NroTermo)</td>
                            <td>@Html.DisplayFor(modelItem => item.InicioVigencia)</td>
                            <td>@Html.DisplayFor(modelItem => item.FimVIgencia)</td>
                            <td>@Html.DisplayFor(modelItem => item.Validade)</td>
                            <td>@Html.DisplayFor(modelItem => item.Ativo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>
                                <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#observacaoModal-@item.Protocolo">
                                    <img src="~/svg/vizualizar.svg" width="20" height="20" class="d-inline-block align-top" alt="">
                                </button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#evidenciasModal-@item.Protocolo">
                                    <img src="~/svg/vizualizar.svg" width="20" height="20" class="d-inline-block align-top" alt="">
                                </button>
                            </td>
                            <td>
                                <div class="d-flex">

                                </div>
                            </td>
                        </tr>
                        <!-- Modal Observacao -->
                        <div class="modal fade" id="observacaoModal-@item.Protocolo" tabindex="-1" role="dialog" aria-labelledby="observacaoModalLabel-@item.Protocolo" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="observacaoModalLabel-@item.Protocolo">Informações</h5>
                                    </div>
                                    <div class="modal-body">
                                        @Html.DisplayFor(modelItem => item.Informacoes)
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal Evidencias -->
                        <div class="modal fade" id="evidenciasModal-@item.Protocolo" tabindex="-1" role="dialog" aria-labelledby="evidenciasModalLabel-@item.Protocolo" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="evidenciasModalLabel-@item.Protocolo">Observações</h5>
                                    </div>
                                    <div class="modal-body" style="white-space: pre-wrap;overflow-wrap: break-word;">
                                        @Html.DisplayFor(modelItem => item.Observacao)
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>


            </table>

        </div>
    </div>
    <div class="pagination justify-content-center">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <div class="btn-sm btn-info">
                    <a class="page-link bg-info text-white" asp-action="Index" asp-route-pageSize="@Model.PageSize" asp-route-pageNumber="@(Model.PageNumber - 1)">Anterior</a>
                </div>
            </li>
        }
        <div class="p-1">
            @if (Model.PageNumber > 1 && Model.PageNumber < Model.TotalPages - 2)
            {
                <span class="bg-white color-black">@Model.PageNumber</span>
            }
        </div>
        @if (Model.TotalPages > Model.PageNumber)
        {
            <li class="page-item">
                <div class="btn-sm btn-info">
                    <a class="page-link bg-info text-white " asp-action="Index" asp-route-pageSize="@Model.PageSize" asp-route-pageNumber="@(Model.PageNumber + 1)">Próxima</a>
                </div>
            </li>
        }
    </div>
</div>