

@using Domain.DueDiligence.Enum
@model ODP.Web.UI.Models.DueDiligence.AnaliseCadastroViewModel

@{
    ViewData["Title"] = "Criar Nova Análise";
}

<h2>Criar Nova Análise</h2>

<form id="formCriacao" asp-action="Create" method="post">
    
   

   

    <!-- Dados que o usuário deve preencher -->
    <h4>Dados da Análise</h4>

    <div class="form-group">
        <label for="DataAnalise">Data da Análise</label>
        <input type="date" id="DataAnalise" name="DataAnalise" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="AnaliseTecnica">Análise Técnica</label>
        <textarea id="AnaliseTecnica" name="AnaliseTecnica" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Risco" class="control-label"></label>
        @Html.DropDownListFor(m => m.Risco, new SelectList(Enum.GetValues(typeof(ETipoRisco))), new { @class = "form-control" })
        <span asp-validation-for="Risco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ressalvas" class="control-label"></label>
        @Html.DropDownListFor(m => m.Ressalvas, new SelectList(Enum.GetValues(typeof(ETipoRessalva))), new { @class = "form-control" })
        <span asp-validation-for="Ressalvas" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Responsavel">Responsável</label>
        <input type="text" id="Responsavel" name="Responsavel" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Salvar Análise</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>




