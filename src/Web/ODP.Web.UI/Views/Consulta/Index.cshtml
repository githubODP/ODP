@{
    ViewData["Title"] = "Consulta";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta Geral</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f8ff;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            color: #007acc;
            text-align: center;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        form {
            width: 100%;
            max-width: 600px;
            background-color: #ffffff;
            border: 1px solid #cce7ff;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            font-weight: bold;
            margin: 10px 0 5px;
        }

        input[type="text"],
        select,
        button {
            width: 100%;
            padding: 8px;
            margin: 5px 0 15px;
            border: 1px solid #cce7ff;
            border-radius: 5px;
        }

        input[type="checkbox"] {
            margin-right: 5px;
        }

        button {
            background-color: #007acc;
            color: white;
            font-weight: bold;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #005f99;
            }

        .checkbox-group {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

            .checkbox-group label {
                font-weight: normal;
            }

        .section-title {
            font-weight: bold;
            color: #005f99;
            margin-top: 15px;
        }
    </style>
</head>
<body>

    <h1>Consulta Geral</h1>

    <form method="get" action="/Consulta/ConsultaCNPJ">
        <label for="cnpj">CNPJ:</label>
        <input type="text" id="cnpj" name="cnpj" />

        <div class="section-title">Tabelas Selecionadas:</div>
        <div class="checkbox-group">
            <label><input type="checkbox" name="tabelasSelecionadas" value="compras" /> Compras</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="dividas" /> Dívidas</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="fazenda" /> Fazenda</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="estadual" /> Estadual</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="federal" /> Federal</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="interno" /> DueDiligence</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="tce" /> TCE</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="tcu" /> TCU</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="tse" /> TSE</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="todas" /> Todas</label>
        </div>

        <button type="submit">Consultar CNPJ</button>
    </form>

    <form method="get" action="/Consulta/ConsultaCPF">
        <label for="cpf">CPF:</label>
        <input type="text" id="cpf" name="cpf" />

        <div class="section-title">Tabelas Selecionadas:</div>
        <div class="checkbox-group">
            <label><input type="checkbox" name="tabelasSelecionadas" value="compras" /> Compras</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="dividas" /> Dívidas</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="estadual" /> Estadual</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="federal" /> Federal</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="interno" /> DueDiligence</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="tce" /> TCE</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="tcu" /> TCU</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="tse" /> TSE</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="todas" /> Todas</label>
        </div>

        <button type="submit">Consultar CPF</button>
    </form>

    <form method="post" enctype="multipart/form-data" action="/Consulta/ConsultaLote">
        <label for="arquivo">Arquivo:</label>
        <input type="file" id="arquivo" name="arquivo" />

        <label for="tipoDeBusca">Tipo de Busca:</label>
        <select id="tipoDeBusca" name="tipoDeBusca">
            <option value="CNPJ">CNPJ</option>
            <option value="CPF">CPF</option>
        </select>

        <div class="section-title">Tabelas Selecionadas:</div>
        <div class="checkbox-group">
            <label><input type="checkbox" name="tabelasSelecionadas" value="compras" /> Compras</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="dividas" /> Dívidas</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="estadual" /> Estadual</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="federal" /> Federal</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="interno" /> DueDiligence</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="tce" /> TCE</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="tcu" /> TCU</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="tse" /> TSE</label>
            <label><input type="checkbox" name="tabelasSelecionadas" value="todas" /> Todas</label>
        </div>

        <button type="submit">Consultar em Lote</button>
    </form>

</body>
</html>
