 @model ODP.Web.UI.Models.Identidade.UsuarioLoginViewModel

@{
    ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Data Mining</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">

    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/loginregistro.css" rel="stylesheet" />

</head>
<body>

    <div class="container login-container">
        <div class="login-card">
            <!-- Imagem representando Data Mining -->
            <div class="login-image"></div>

            <!-- Formulário de Login -->
            <div class="login-form">
                <div class="text-center mb-4">
                    <h4 class="mb-1">Entrar</h4>
                    <p>Entre com sua conta</p>
                </div>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-mail</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="text" asp-for="Email" class="form-control" placeholder="Entre com um e-mail válido" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Senha" class="form-label">Senha</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha" />
                        </div>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="mb-4 form-check">
                        <input id="chk1" type="checkbox" class="form-check-input" />
                        <label for="chk1" class="form-check-label">Lembre-me</label>
                    </div>

                    <!-- Botão de Login Centralizado -->
                    <div class="d-grid">
                        <button type="submit" class="btn login-btn">Login</button>
                    </div>

                   @*  <div class="footer-link mt-3">
                        <small>Esqueceu a senha? <a href="#" class="text-decoration-none">Recuperar</a></small>
                        <br>
                        <small>Não tem uma conta? <a asp-controller="Identidade" asp-action="Registro" class="text-decoration-none text-primary">Registrar</a></small>
                    </div> *@
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
